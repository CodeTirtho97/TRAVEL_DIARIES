<style>
    .navbar-brand {
        font-size: 23px;
        font-weight: bolder;
    }

    .navbar-brand span {
        font-style: italic;
        font-weight: lighter;
    }
</style>

<div id="topheader">
    <nav class="navbar navbar-expand-lg navbar-dark py-1" style="background-color: #013a63; font-size: 15px;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TRAVEL <span>diaries</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/diaries">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/diaries/recent">RECENT
                            DIARIES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/diaries/alldiaries">ALL
                            DIARIES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/diaries/new">NEW DIARY</a>
                    </li>
                </ul>
                <div class="navbar-nav ml-auto">
                    <% if(!currentUser) { %>
                        <a class="nav-link font-weight-bold" href="/login">LOGIN</a>
                        <% } else { %>
                            <span class="nav-link mr-1 font-weight-bold font-italic text-white d-none d-lg-block">
                                <%= currentUser.firstname %>
                            </span>
                            <a class="nav-link font-weight-bold" href="/logout">LOGOUT</a>
                            <% } %>
                </div>
            </div>
        </div>
    </nav>
</div>

<script>
    $( '#topheader .navbar-nav a' ).on( 'click', function () {
        $( '#topheader .navbar-nav' ).find( 'li.active' ).removeClass( 'active' );
        $( this ).parent( 'li' ).addClass( 'active' );
    } );
</script>