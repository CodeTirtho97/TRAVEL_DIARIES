<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/css/mostliked.css">

    <div class="container my-5 pt-5">
        <h1>Most Liked Diaries</h1>
        <% for(let mostLikedDiary of mostLikedDiaries) {%>
            <div class="card mb-4">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="<%= mostLikedDiary.title %> " src="<%=mostLikedDiary.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= mostLikedDiary.title %>
                            </h5>
                            <p class="card-text">
                                <%= mostLikedDiary.description.slice(0,190) %>...
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= mostLikedDiary.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/diaries/<%=mostLikedDiary._id%>">View
                                <%=mostLikedDiary.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>