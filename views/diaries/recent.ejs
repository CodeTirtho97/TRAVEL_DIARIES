<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/css/recent.css">

    <div class="container my-5">
        <h1>
            &lt; Recently Added Diaries &gt;
        </h1>
        <% for(let recentDiary of recentDiaries) {%>
            <div class="card mb-4">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="<%= recentDiary.title %> " src="<%=recentDiary.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= recentDiary.title %>
                            </h5>
                            <p class="card-text">
                                <%= recentDiary.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= recentDiary.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/diaries/<%=recentDiary._id%>">View
                                <%=recentDiary.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>