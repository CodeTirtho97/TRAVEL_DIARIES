<% layout('layouts/boilerplate')%>

    <div class="container d-flex flex-column my-5">
        <h1 class="display-4"
            style="font-family: 'Courier New', Courier, monospace; font-weight: bolder; color: #ff8800; text-align: end;">
            Edit
            Diary
        </h1>
        <div class="card mb-3" style="width: 100%; height: 100%;">
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title mb-5" style="font-weight: 300; font-style: oblique;">Update Your
                            Experience
                            &#128524;</h2>
                        <form action="/diaries/<%= diary._id %>?_method=PUT" method="POST">
                            <div class="mb-2">
                                <label for="title" class="form-label h6">What'll Your Travel Diary Be Called?</label>
                                <input type="text" class="form-control" id="title" name="diaries[title]"
                                    aria-describedby="diaryTitle" placeholder="Enter Title" value="<%= diary.title %> ">
                            </div>
                            <div class="mb-2">
                                <label for="location" class="form-label h6">Where Did You Go?</label>
                                <input type="text" class="form-control" id="location" name="diaries[location]"
                                    aria-describedby="diaryLocation" placeholder="Enter Location"
                                    value="<%= diary.location %>">
                            </div>
                            <div class="mb-2">
                                <label for="image" class="form-label h6">Care To Share Some Photos?</label>
                                <input type="text" class="form-control" id="image" name="diaries[image]"
                                    aria-describedby="diaryPhotos" placeholder="Enter Image URL"
                                    value="<%= diary.image %>">
                            </div>
                            <div class="mb-2">
                                <label for="cost" class="form-label h6">How Much Did It Cost Around?</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="price-label">&#8377;</span>
                                    <input type="text" class="form-control" id="cost" name="diaries[cost]"
                                        aria-describedby="diaryCost" placeholder="0.00" value="<%= diary.cost %>">
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="description" class="form-label h6">Share Your Experience In Details:
                                </label>
                                <textarea type="text" class="form-control" cols="8" rows="4" id="description"
                                    name="diaries[description]" aria-describedby="diaryDescription"
                                    placeholder="Write something..."><%= diary.description %> </textarea>
                            </div>
                            <div class="mb-auto">
                                <a class="col-md-5 btn btn-warning btn-lg float-start" style="color: #fff;"
                                    href="/diaries">
                                    &#129092; All Diaries</a>
                                <button type="submit" class=" col-md-5 btn btn-success btn-lg float-end">Update
                                    Diary &check;</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4">
                    <img style="height: 630px; width: 100%;"
                        src="https://images.unsplash.com/photo-1642712395150-27a5c2e6ee6f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=358&q=80"
                        class="img-fluid" alt="new-diary">
                </div>
            </div>
        </div>
    </div>