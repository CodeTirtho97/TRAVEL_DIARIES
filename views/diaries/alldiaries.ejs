<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/css/mostliked.css">

    <div class="container my-5">
        <h1>EXPLORE DIARIES</h1>
        <% for(let Diary of allDiaries) {%>
            <div class="card mb-4">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="<%= Diary.title %> " src="<%=Diary.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= Diary.title %>
                            </h5>
                            <p class="card-text">
                                <%= Diary.description.slice(0,190) %>...
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= Diary.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/diaries/<%=Diary._id%>">View
                                <%=Diary.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>